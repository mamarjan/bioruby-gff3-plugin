rootpath = File.dirname(File.dirname(__FILE__))
$: << rootpath+'/lib'

require 'bio/db/gff/gffdb'

gfftype = ARGV.shift
raise "Unknown GFF type '#{gfftype}'" if gfftype !~ /mrna|cds/i
gffdb = Bio::GFF::GFFdb.new

ARGV.each do | fn |
  gff3 = Bio::GFF::GFF3.new(File.read(fn))
  gffdb.add(gff3)
end



